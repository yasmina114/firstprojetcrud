pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/yasmina114/firstprojetcrud.git']]
                ])
            }
        }

       stage('MVN CLEAN') {
                   steps {
                      withMaven() {
                     bat 'mvn clean compile'

                  }
                }
               }

       stage('MVN COMPILE') {
                           steps {
                               bat 'mvn compile'
                           }
                       }

                       stage('MVN PACKAGE') {
                           steps {
                               bat 'mvn package'
                           }
                       }

                       stage('MVN TEST') {
                           steps {
                               bat 'mvn test'
                           }
                       }

                           stage('MVN SONARQUBE') {
                                   steps {
                                       sh 'mvn sonar:sonar  -Dsonar.projectKey=jenkins  -Dsonar.host.url= http://localhost:9000     -Dsonar.login=228ccbd355b9274ed27e6e397ebb13953eecbe5a'
                                   }
                               }






      }
    }